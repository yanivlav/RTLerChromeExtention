{
  "manifest_version": 3,
  "name": "LTR to RTL Content Switcher",
  "version": "1.0",
  "description": "Switch webpage content direction from LTR to RTL.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
